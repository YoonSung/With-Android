<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorPrimaryDark">@color/actionbar_background</item>
        <item name="colorControlHighlight">#00CC55</item>
    </style>

    <style name="edittext_msg">
        <item name="android:ems">10</item>
        <item name="android:imeActionId">100</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:layout_marginLeft">@dimen/pad_5dp</item>
        <item name="android:layout_marginRight">@dimen/pad_5dp</item>
        <item name="android:paddingLeft">@dimen/pad_5dp</item>
        <item name="android:paddingRight">@dimen/pad_5dp</item>
        <item name="android:padding">@dimen/pad_5dp</item>
        <item name="android:textColor">@color/main_color_gray</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:background">@drawable/shape_round_small_white</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">4</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">false</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="btn_transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/main_color_gray</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textScaleX">0.9</item>
    </style>

</resources>
